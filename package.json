{
    "name": "my-turborepo",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "install:all": "yarn workspaces foreach install",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1",
        "eslint": "^8.34.0",
        "madge": "^6.0.0",
        "prettier": "^2.8.4",
        "turbo": "^1.8.1",
        "typescript": "^4.9.5"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "packageManager": "yarn@3.4.1"
}
